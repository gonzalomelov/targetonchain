{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@target-monorepo/*": ["../../../../*"]
    }
  },
  "include": ["./scripts", "./test", "./tasks"],
  "exclude": ["node_modules", "../../../../**/node_modules"]
}
